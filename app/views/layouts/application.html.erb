<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Crypton Studio</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "application.css", media: "all", "data-turbolinks-track" => :reload %>
  <%= javascript_include_tag "application.js", "data-turbolinks-track" => :reload  %>
  <link rel="shortcut icon" type="image/ico" href="/favicon.ico"/>
</head>

<body data-sa-theme='7'>
  <main class="main">

    <%= render partial: 'core/header' %>

    <%= render partial: 'core/menu' %>

    <%= render partial: 'core/themes' %>

    <section class="content">

      <%= yield %>

      <%= render partial: 'core/footer' %>

    </section>

  </main>
</body>


<%= yield :modal %>

<%= yield :body_end %>

<script>
  $(document).ready(function(){

    <% if flash[:notice] %>
    notify('top','left', 'fa fa-check', 'inverse', '<%= flash[:notice] %>');
    <% end %>

    <% if flash[:success] %>
    notify('top','left', 'fa fa-check', 'inverse', '<%= flash[:success] %>');
    <% end %>

    <% if flash[:error] %>
    notify('top','left', 'fa fa-check', 'inverse', '<%= flash[:error] %>');
    <% end %>

  });
</script>

</body>
</html>
