<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Crypton Studio</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "application.css", media: "all", "data-turbolinks-track" => :reload %>
  <%= javascript_include_tag "application.js", "data-turbolinks-track" => :reload  %>
  <link rel="shortcut icon" type="image/png" href="favicon.jpg"/>
  <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,‌​100italic,300,300ita‌​lic,400italic,500,50‌​0italic,700,700itali‌​c,900italic,900' rel='stylesheet' type='text/css'>
</head>

<body data-sa-theme='7'>
  <main class="main">

    <%= render partial: 'core/header' %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>





    <%= render partial: 'core/menu' %>

    <%= render partial: 'core/themes' %>

    <section class="content">

      <%= yield %>

      <%= render partial: 'core/footer' %>

    </section>

  </main>
</body>


<%= yield :modal %>

<%= yield :body_end %>

<script>
  $(document).ready(function(){

    <% if flash[:notice].present? %>
    notify('<%= flash[:notice] %>', 'info');
    <% end %>

    <% if flash[:success].present? %>
    notify('<%= flash[:success] %>', 'success');
    <% end %>

    <% if flash[:error].present? %>
    notify('<%= flash[:error] %>', 'danger');
    <% end %>

  });
</script>

</body>
</html>
